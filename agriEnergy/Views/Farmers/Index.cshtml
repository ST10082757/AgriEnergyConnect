@model List<Farmers>

@{
}

<h1 class="text-center">List of Farmers</h1>
<h2 class="text-center mb-5">Farmers</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Farmers" asp-action="Create">New Farmer</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td class="text-black">@farmer.Id</td>
                <td class="text-black">@farmer.name</td>
                <td class="text-black">@farmer.email</td>
                <td class="text-black">@farmer.role</td>
                <td style="white-space: nowrap">
                    <a class="btn btn-primary" asp-controller="Farmers" asp-action="Edit" asp-route-id="@farmer.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Farmers" asp-action="Delete" asp-route-id="@farmer.Id" onclick="return confirm(are you sure?)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
